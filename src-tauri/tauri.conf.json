{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "YuTex",
  "version": "0.1.0",
  "identifier": "com.yousuf-uyghur.yutex",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "YuTex",
        "fullscreen": true,            
        "resizable": true,
        "decorations": false, 
        "visible": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
